@model IEnumerable<cs4540_final_project.Models.Worker>
@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/landing-page.css">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" />
<link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">

<!-- Intro section -->
<div class="intro-section">
    <div class="intro-text">
        <h1>University </br>Barber Shop</h1>
        <h3>Remember… </h3>
        <h3>it’s not just a haircut, it’s an experience.</h3>
    </div>
</div>

<!-- Barbers section-->
<div class="staff-section">
    <!-- Title -->
    <div class="barber-header">
        <h1>MEET THE BARBERS</h1>
    </div>

    <!-- Barbers container-->
    <div class="barbers card-group">

        @foreach (var item in Model)
        {
            <!-- Barber card-->
            <div class="barbers-container">
                <div class="pic-container">
                    <img src="~/images/profile-pic.jpg" class="profile" alt="profile pic" width="128" height="128" />
                </div>
                <div class="profile-name">
                    @item.Name
                </div>
                <div class="rating">
                    <p>Specialties: @item.Services</p>
                </div>
                <a class="button-link profile-btn" asp-route-id="@item.ID" asp-controller="Workers" asp-action="Details">Profile</a>
                <a class="button-link book-now-btn" asp-route-id="@item.ID" asp-controller="Workers" asp-action="Details">Book Now</a>
            </div>
        }

    </div>
</div>





