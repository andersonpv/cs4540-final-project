                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" value="" onclick="change_schedule(event, '@id', '9:30', '@date', '@worker.ID', '@item.DayScheduleID')" id="@id" checked="@item.NineThirty" disabled="@item.NineThirty">9:30
                    </label>
