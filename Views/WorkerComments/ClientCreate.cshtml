@model cs4540_final_project.Models.WorkerComment

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Write a Reveiw</h1>

<hr />
<link rel="stylesheet" href="~/css/login.css">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" />
<link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">

<div class="intro-section">
    <div class="element-container">
        <h1 class="title">Write a Comment</h1>
        <section class="login-section">
            <form asp-action="ClientCreate">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    @{
                        string Username = (string)ViewData["Username"];
                    }
                    <label asp-for="Name" class="form-control">@Username</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="StarRating" class="control-label">Star Rating: </label>
                    <label for="star1" title="1">1</label><input asp-for="StarRating" type="radio" id="star1" name="StarRating" value="1" />
                    <label for="star2" title="2">2</label><input asp-for="StarRating" type="radio" id="star2" name="StarRating" value="2" />
                    <label for="star3" title="3">3</label><input asp-for="StarRating" type="radio" id="star3" name="StarRating" value="3" />
                    <label for="star4" title="4">4</label><input asp-for="StarRating" type="radio" id="star4" name="StarRating" value="4" />
                    <label for="star5" title="5">5</label><input asp-for="StarRating" type="radio" id="star5" name="StarRating" value="5" />
                    <span asp-validation-for="StarRating" class="text-danger"></span>
                </div>
                @{
                    var workers = (IEnumerable<SelectListItem>)ViewData["WorkerSelect"];
                }
                <div class="form-group">
                    <label asp-for="WorkerID" class="control-label">Worker</label>
                    <select asp-for="WorkerID" class="form-control" asp-items="@workers">
                    </select>
                </div>
                <div class="form-group" style="width:100%">
                    <label asp-for="Comment" class="control-label"></label>
                    <textarea asp-for="Comment" class="form-control" id="Comment" name="Comment" rows="5" cols="500" maxlength="2000"></textarea>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </section>
    </div>
</div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
